{
    "name": "AMSMNet",
    "n_gpu": 2,
    
    "arch": {
        "type": "AMSMNetModel",
        "args": {
            "input_channels": 3,
            "intermediate_channels": 64,
            "num_resblocks": 4,
            "default_kernel_size": 3,
            "rgb_range": 255,
            "attention_input_channels": 3,
            "dense_growth_rate": 8
        }
    },
    "data_loader": {
        "type": "AMSMNetDataLoader",
        "args":{
            "data_dir": "/1/Datasets/adobe",
            "batch_size": 6,
            "shuffle": true,
            "validation_split": 0.01,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "content_loss": {
        "type": "VGG16ContentModel",
        "args": {
            "model": "vgg16",
            "feature_map": 7
        }
    },
    "alpha_loss_weight": 20,
    "comp_loss_weight": 20,
    "content_loss_weight": 0.1,
    "metrics": [
        "my_metric"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "/1/training-log/amsmnet-saved",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "/1/training-log/amsmnet-saved/runs"
    }
}
