{
    "name": "AMSMNet",
    "n_gpu": 1,
    
    "arch": {
        "type": "AMSMNetModel",
        "args": {
            "input_channels": 3,
            "intermediate_channels": 64,
            "num_resblocks": 16,
            "default_kernel_size": 3,
            "rgb_range": 255
        }
    },
    "data_loader": {
        "type": "AMSMNetDataLoader",
        "args":{
            "data_dir": "/1/Datasets/adobe",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.0000001,
            "momentum": 0.9
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "my_metric"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "/1/training-log/amsmnet-saved",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "/1/training-log/amsmnet-saved/runs"
    }
}
